from datetime import datetime

# Classe principal do banco
class Banco:
    def __init__(self):
        self.saldo = 0.0
        self.extrato = []
        self.limite_saque = 500.0
        self.limite_saques_diarios = 3
        self.saques_realizados = 0

    def depositar(self, valor):
        if valor > 0:
            self.saldo += valor
            self.extrato.append(f"{datetime.now().strftime('%d/%m/%Y %H:%M:%S')} - Dep√≥sito: R$ {valor:.2f}")
            print(f"‚úÖ Dep√≥sito de R$ {valor:.2f} realizado com sucesso.")
        else:
            print("‚ùå Valor de dep√≥sito inv√°lido. Tente novamente.")

    def sacar(self, valor):
        if self.saques_realizados >= self.limite_saques_diarios:
            print("‚ùå Limite di√°rio de saques atingido.")
        elif valor > self.limite_saque:
            print(f"‚ùå Valor do saque excede o limite de R$ {self.limite_saque:.2f} por opera√ß√£o.")
        elif valor > self.saldo:
            print("‚ùå Saldo insuficiente para realizar o saque.")
        elif valor > 0:
            self.saldo -= valor
            self.saques_realizados += 1
            self.extrato.append(f"{datetime.now().strftime('%d/%m/%Y %H:%M:%S')} - Saque: R$ {valor:.2f}")
            print(f"‚úÖ Saque de R$ {valor:.2f} realizado com sucesso.")
        else:
            print("‚ùå Valor de saque inv√°lido. Tente novamente.")

    def exibir_extrato(self):
        print("\n========== EXTRATO ==========")
        if not self.extrato:
            print("‚ö†Ô∏è  N√£o foram realizadas movimenta√ß√µes.")
        else:
            for operacao in self.extrato:
                print(operacao)
        print(f"\nüí∞ Saldo atual: R$ {self.saldo:.2f}")
        print("=============================\n")

# Fun√ß√£o do menu
def menu():
    print("\nüìã Bem-vindo ao Sistema Banc√°rio DIO")
    print("[1] Depositar")
    print("[2] Sacar")
    print("[3] Ver Extrato")
    print("[0] Sair")

# Instancia o banco
banco = Banco()

# Loop principal
while True:
    menu()
    opcao = input("Escolha uma op√ß√£o: ")

    if opcao == "1":
        try:
            valor = float(input("Informe o valor do dep√≥sito: R$ "))
            banco.depositar(valor)
        except ValueError:
            print("‚ùå Entrada inv√°lida. Por favor, digite um n√∫mero.")
    elif opcao == "2":
        try:
            valor = float(input("Informe o valor do saque: R$ "))
            banco.sacar(valor)
        except ValueError:
            print("‚ùå Entrada inv√°lida. Por favor, digite um n√∫mero.")
    elif opcao == "3":
        banco.exibir_extrato()
    elif opcao == "0":
        print("üëã Obrigado por utilizar o Sistema Banc√°rio DIO. At√© mais!")
        break
    else:
        print("‚ùå Op√ß√£o inv√°lida. Tente novamente.")
